                            <script type="text/javascript">
                                $(document).ready(function()
                                {   
                                    $('#pain_scale3').hide();
                                    $('#submitNo3').hide();
                                    $('#submitYes3').hide();
                                
                                    $('#followupYes3').change(function()
                                    {
                                        if($('#followupYes3').is(':checked'))
                                        {
                                            $('#pain_scale3').fadeIn('slow');
                                            $('#submitNo3').fadeOut('slow');
                                            
                                        }
                                        else if($('#followupNo3').is(':checked'))
                                        {
                                            $('#pain_scale3').fadeOut('slow');
                                            $('#submitNo3').fadeIn('slow');
                                        }
                                        else{
                                            $('#pain_scale3').fadeOut('slow');
                                            $('#submitNo3').fadeIn('slow');
                                        }
                                    });
                                
                                    $('#followupNo3').change(function()
                                    {
                                        if($('#followupNo3').is(':checked'))
                                        {
                                            $('#pain_scale3').fadeOut('slow');
                                            $('#submitNo3').fadeIn('slow');
                                        }
                                
                                    });
                                
                                    $('#followup_mild3').change(function()
                                    {
                                        if($('#followup_mild3').is(':checked'))
                                        {
                                            $('#submitYes3').fadeIn('slow');
                                        }
                                    });
                                
                                    $('#followup_moderate3').change(function()
                                    {
                                        if($('#followup_moderate3').is(':checked'))
                                        {
                                            $('#submitYes3').fadeIn('slow');
                                        }
                                    });
                                
                                    $('#followup_severe3').change(function()
                                    {
                                        if($('#followup_severe3').is(':checked'))
                                        {
                                            $('#submitYes3').fadeIn('slow');
                                        }
                                    });
                                
                                    $('#followup_worst3').change(function()
                                    {
                                        if($('#followup_worst3').is(':checked'))
                                        {
                                            $('#submitYes3').fadeIn('slow');
                                        }
                                    });
                                
                                    
                                
                                });
                                    </script>
